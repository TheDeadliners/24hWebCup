{% extends 'base.html.twig' %}

{% block title %}Conversation{% endblock %}

{% block body %}

    <div class="h-[70vh] flex flex-col">
        <div class="bg-gray-200 flex-1 overflow-y-scroll">
            <div class="px-4 py-2">
                {% set currentUser = app.user %}
                {% for message in messages %}
                    {% if message.emitter == currentUser %}
                        {# Afficher le message de l'utilisateur connectÃ© #}
                        <div class="flex items-center justify-end mb-2">
                            <div class="bg-primary-600 text-white rounded-lg p-2 shadow mr-2 max-w-sm">
                                {{ message.content }}
                            </div>
                            <img class="w-8 h-8 rounded-full" src="{{ app.user.profilePicture }}" alt="User Avatar">
                        </div>
                    {% else %}
                        {# Afficher le message de l'autre utilisateur #}
                        <div class="flex items-center mb-2">
                            <img class="w-8 h-8 rounded-full mr-2" src="{{ message.emitter.profilePicture }}" alt="User Avatar">
                            <div class="font-medium">{{ message.emitter.lastname }} - {{ message.emitter.firstname }}</div>
                        </div>
                        <div class="bg-white rounded-lg p-2 shadow mb-2 max-w-sm">
                            {{ message.content }}
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>


        <div class="bg-gray-100 px-4 py-2">
            <div class="flex items-center">
                <input class="w-full border rounded-full py-2 px-4 mr-2" type="text" placeholder="Saisissez votre message...">
                <input type="text" value="{{ conversation.id }}" name="conversationId" >
                <input type="text" value="{{ conversation.id }}" name="conversationId" >
                <button class="bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-4 rounded-full">
                    Envoyer
                </button>
            </div>
        </div>
    </div>

{% endblock %}

